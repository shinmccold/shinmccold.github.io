---
import BaseLayout from "@layouts/BaseLayout.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro";
import { SITE } from "@/config";

const pageTitle: string = `Page Not Found | ${SITE.title}`;

const title: string = "Not Found";
const subTitle: string =
    "We really tried, but we still couldn't find what you were looking for";
---

<BaseLayout 
    title="Page Not Found" 
    description="The page you're looking for doesn't exist"
>
<div class="flex flex-col items-center justify-center min-h-[70vh] px-4">
    <h1 class="text-4xl md:text-6xl font-bold text-neutral-800 dark:text-yellow-400">
        404
    </h1>
    
    <div class="mt-4 text-xl md:text-2xl text-neutral-600 dark:text-neutral-200 text-center">
        Oops! Looks like you've ventured into uncharted territory
    </div>

    <p class="mt-2 text-neutral-500 dark:text-yellow-400/80 text-center max-w-md">
        The page you're looking for has moved or doesn't exist. 
        But don't worry, there's plenty more to explore!
    </p>

    <div class="mt-8 flex gap-4">
        <a 
            href="/" 
            class="px-4 py-2 bg-neutral-800 text-white rounded-lg hover:bg-neutral-700 
                   dark:bg-yellow-400 dark:text-neutral-900 dark:hover:bg-yellow-300 
                   transition-colors duration-300"
        >
            Go Home
        </a>
        <a 
            href="/posts" 
            class="px-4 py-2 border border-neutral-300 rounded-lg hover:bg-neutral-100 
                   dark:border-yellow-400/30 dark:text-yellow-400 dark:hover:bg-yellow-400/10 
                   transition-colors duration-300"
        >
            Browse Posts
        </a>
    </div>
</div>
</BaseLayout>
